{
  "name": "htmlspecialchars",
  "version": "1.0.3",
  "description": "Escape special characters to HTML entities in JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "npm run mocha && npm run karma:ci && npm run karma:requirejs",
    "mocha": "mocha --require intelli-espower-loader --require './test/node-adaptor' test/test.js",
    "karma:watch": "./node_modules/karma/bin/karma start",
    "karma:ci": "./node_modules/karma/bin/karma start --single-run --browsers PhantomJS",
    "karma:requirejs": "npm run espower && ./node_modules/karma/bin/karma start karma.requirejs.conf.js --single-run --browsers PhantomJS",
    "espower": "espower test/test.js > test/test.powered.js"
  },
  "directories": {
    "test": "test/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/teppeis/htmlspecialchars"
  },
  "keywords": [
    "html",
    "escape"
  ],
  "author": "teppeis@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teppeis/htmlspecialchars/issues"
  },
  "homepage": "https://github.com/teppeis/htmlspecialchars",
  "devDependencies": {
    "browserify": "^6.3.2",
    "espower-cli": "^0.2.0",
    "espower-loader": "^0.10.0",
    "espowerify": "^0.10.0",
    "intelli-espower-loader": "^0.5.0",
    "karma": "^0.12.25",
    "karma-browserifast": "^0.7.0",
    "karma-chrome-launcher": "^0.1.5",
    "karma-firefox-launcher": "^0.1.3",
    "karma-ie-launcher": "^0.1.5",
    "karma-mocha": "^0.1.9",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-requirejs": "^0.2.2",
    "karma-safari-launcher": "^0.1.1",
    "mocha": "^2.0.1",
    "power-assert": "^0.10.0",
    "requirejs": "^2.1.15"
  }
}
